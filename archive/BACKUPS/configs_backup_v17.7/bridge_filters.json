{
  "schema": "v1",
  "routing": {
    "AAD":   { "channels": ["email","text","meeting"] },
    "Coach": { "channels": ["email","meeting"] },
    "Board": { "channels": ["email"] }
  },
  "urgency_thresholds": {
    "low": { "score_min": -999, "score_max": 1.0 },
    "normal": { "score_min": 1.0, "score_max": 3.0 },
    "high": { "score_min": 3.0, "score_max": 6.0 },
    "urgent": { "score_min": 6.0, "score_max": 999 }
  },
  "channel_prefs": {
    "email": { "batch": true, "batch_window_hours": 24 },
    "text": { "batch": false, "quiet_hours_local": [22,7] },
    "meeting": { "requires_agenda": true }
  },
  "message_pack": { "version": "1.0", "include_plain_english": true, "include_raw_scores": true }
}
